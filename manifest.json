{
  "name": "Custom Bookmarks with SVG Icons",
  "version": "1.0",
  "description": "通过右键菜单将当前网页收藏到自定义类别，支持自定义 SVG 图标。",
  "manifest_version": 3,
  
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Custom Bookmarks"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
